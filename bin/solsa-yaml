#!/usr/bin/env node

let yaml = require('js-yaml')
const minimist = require('minimist')

const argv = minimist(process.argv.slice(2), {
  default: { target : 'kubernetes' },
  alias: { target: 't' },
  string: [ 'target' ]
})

console.log(require(require('path').resolve(argv._[0]))
  ._yaml(argv.target).map(obj => yaml.safeDump(obj, { noArrayIndent: true })).join('---\n'))
